<Window x:Class="Game_of_LIFE.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_of_LIFE.Console"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="ButtonBase_OnClick" Grid.Column="0" Grid.Row="1">Start</Button>
        <Button Click="ButtonChange_Time" Grid.Column="1"  Grid.Row="1">buy</Button>
        <TextBox Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="2" x:Name="SpeedBox" 
                 Height="50px"
                 Width="100px"
                 TextAlignment="Center"></TextBox>
        <Button Grid.Column="2" Grid.Row="1" Click="ButtonPause">PAUSE</Button>
        <Button Grid.Column="3" Grid.Row="1" Click='ButtonResume'>Resume</Button>
    </Grid>
</Window>
