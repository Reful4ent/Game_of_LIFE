<Window x:Class="Game_of_LIFE.Console.View.ReferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Game_of_LIFE.Console.View"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Reference"
        Height="550" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        MinHeight="550"
        MinWidth="800"
        ResizeMode="NoResize"
        Icon="IMG/Icon.png">
    <Grid>
        <ScrollViewer>
            <Grid Margin="20 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100px"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           TextWrapping="Wrap"
                           FontSize="16"
                           FontWeight="SemiBold">
                    Клеточный автомат, придуманный английским математиком Джоном Конвеем в 1970 году. Это игра без игроков, в которой человек создаёт начальное состояние, а потом лишь наблюдает за её развитием. В игре можно создать процессы с полнотой по Тьюрингу, что позволяет реализовать любую машину Тьюринга. 
                </TextBlock>
                <TextBlock Grid.Row="1" x:Name="RulesText"
                           TextWrapping="Wrap"
                           FontSize="16"
                           FontWeight="DemiBold"
                           TextAlignment="Justify"
                           ></TextBlock>
                <TextBlock TextWrapping="Wrap"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Grid.Row="2">Интересные комбинации:</TextBlock>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Блок</TextBlock>
                        <Image Source="IMG/Block.png" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Блок</TextBlock>
                        <Image Source="IMG/Block.png" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Улей</TextBlock>
                        <Image Source="IMG/Conways_game_of_life_hive.png" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                </Grid>
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Интеграл</TextBlock>
                        <Image Source="IMG/Conways_game_of_life_integral.png" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Каравай</TextBlock>
                        <Image Source="IMG/CGoL_Loaf.png" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                </Grid>
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Пульсар</TextBlock>
                        <Image Source="IMG/Pulsar.png" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Мигалка</TextBlock>
                        <Image gif:ImageBehavior.AnimatedSource="IMG/Blinker.gif" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                </Grid>
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Маяк</TextBlock>
                        <Image gif:ImageBehavior.AnimatedSource="IMG/Game_of_life_beacon.gif" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center">Жаба</TextBlock>
                        <Image gif:ImageBehavior.AnimatedSource="IMG/Game_of_life_toad.gif" Height="200px" Width="200px" Grid.Row="1"></Image>
                    </Grid>
                </Grid>
                <Grid Grid.Row="7">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center">Планер</TextBlock>
                        <Image gif:ImageBehavior.AnimatedSource="IMG/Glider.gif" Height="200px" Width="200px" Grid.Row="1" HorizontalAlignment="Center"></Image>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
